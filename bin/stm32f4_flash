#!/bin/sh

if [ $# = 0 ] && [ -d "BUILD" ]; then
    echo
    ls BUILD/*.hex | head -n1
    HEX_FILE=$(ls BUILD/*.hex | head -n1)
else
    HEX_FILE=$1
fi

if [ -z "${HEX_FILE}" ]; then
    echo "Usage: $0 <hex_file>"
    exit 1
fi

echo ">>>>>> Flashing ..."
openocd -f /usr/share/openocd/scripts/board/st_nucleo_f4.cfg \
            -c "init; reset halt; flash write_image erase ${HEX_FILE}; reset run; exit"
