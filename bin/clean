#! /bin/bash

if [ -z $1 ]; then
	match=$(find -type f -name '*~' -o -type f -name '#*#' -o -type f -name ".#*" | wc -l)
	find -type f -name '*~' -delete -o -name '#*#' -delete -o -type f -name ".#*" -delete
else
	if [ $1 == '.out' ]; then
		match=$(find -type f -name '*.out' | wc -l)
		find -name '*.out' -delete
	fi

	if [ $1 == '.o' ]; then
		match=$(find -name '*.o' | wc -l)
		find -name '*.o' -delete
	fi
fi

echo "Deleted $match matched file(s)"
