#! /bin/bash

if [ -z $1 ]
then
    echo "o---# clone_repo #-------# Usage #-----------------------------o"
    echo "| clone_repo /logi_n/repo_name                                 |"
    echo "| >> Clone repo_name from logi_n to '~/rendu/repo_name' folder |"
    echo "|                                                              |"
    echo "| clone_repo /logi_n/repo_name folder_name                     |"
    echo "| >> Clone repo_name from logi_n to 'folder_name' folder       |"
    echo "o--------------------------------------------------------------o"
    exit 0
fi

cmd=""

if [ -z $2 ]
then
    repo_name=$(echo $1 | rev | cut -d "/" -f 1 | rev)
    # normal git clone, without specified destination folder :
    cmd="git clone lesell_b@git.epitech.eu:$1"
else
    # clone avec dossier de destination :
    cmd="git clone lesell_b@git.epitech.eu:$1 $2"
fi

$($cmd)
