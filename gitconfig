[user]
	email = lesell_b@epitech.eu
	name = Benoit de Chezelles

[github]
	user = bew

[push]
	default = current

[core]
	excludesfile = ~/.gitignore

[alias]

	# add & commit
	a = add
	com = commit --verbose

	# index manipulation
	f = fetch
	m = merge
	ch = checkout
	untrack = rm --cached

	unstage = reset HEAD --

	# remote interaction
	ph = push
	pl = pull

	# info only
	#----------------------------

	br = branch
	st = status --ignore-submodules

	# log
	pretty-log = log --graph --abbrev-commit --decorate --date=format:'%a %e %b %Y [%H:%M]' --pretty=format:'%C(bold red)%h%C(reset) - %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(dim magenta)- %an%C(reset)%n'
	l = "!f() { git pretty-log --all $@; }; f"
	lo = "!f() { git pretty-log --oneline $@; }; f"

	# diff
	d = diff --word-diff=color --ignore-all-space
	dc = "!f() { git d --staged $@; }; f"

	# last merge stats
	stat-last-merge = "!f() { \
		sha_orig_head=$(git rev-parse --short ORIG_HEAD); \
		sha_head=$(git rev-parse --short HEAD); \
		echo 'Last merge (' ${sha_orig_head}..${sha_head} '):'; \
		git --no-pager diff --stat ORIG_HEAD $@ && git --no-pager diff --summary ORIG_HEAD $@; \
		}; f"
	slm = "!f() { git stat-last-merge $@; }; f"

	# last merge diff (move as simple alias?)
	diff-last-merge = "diff ORIG_HEAD"
	dlm = "!f() { git diff-last-merge $@; }; f"

	# last merge logs
	log-last-merge = "!f() { git pretty-log ORIG_HEAD.. $@; }; f"
	llm = "!f() { git log-last-merge $@; }; f"

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool "vimdiff"]
	cmd = nvim -d
	conflictstyle = diff3

[help]
	autocorrect = -1

[color "status"]
	untracked = "cyan dim "

[diff]
	tool = vimdiff
