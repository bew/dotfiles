[user]
	email = lesell_b@epitech.eu
	name = Benoit de Chezelles
[push]
	default = current
[core]
	excludesfile = ~/.gitignore
[alias]
	unstage = reset HEAD --
	com = commit --verbose
	untrack = rm --cached
	pl = pull
	ph = push
	st = status --ignore-submodules
	l = log --graph --abbrev-commit --decorate --date=format:'%a %e %b %Y [%H:%M]' --pretty=format:'%C(bold red)%h%C(reset) - %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(dim magenta)- %an%C(reset)%n' --all
	d = diff --word-diff=color --ignore-all-space
	dc = diff --word-diff=color --ignore-all-space --cached
	f = fetch
	m = merge
	ch = checkout
	br = branch
	vd = vimdiff
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool "vimdiff"]
	cmd = nvim -d
	conflictstyle = diff3
[help]
	autocorrect = -1
[color "status"]
	untracked = "cyan dim "

[diff]
	tool = vimdiff
