ps1+="$(ps1-col 'Grey')("
ps1+="$(ps1-col 'BBlue')\#"
ps1+="$(ps1-col 'Grey'))["
ps1+="$(ps1-col 'BYellow')\u"
ps1+="$(ps1-col 'Grey')] "
ps1+="$(ps1-col 'BCyan')\W "
ps1+="$(ps1-col 'Yellow')\$> "
ps1+="$(ps1-col 'Off')"

#lesell_b@pc-lesell_b: ~
#hist:116 jobs:0 $ lsl
#export PS1="$Green\u@\h: $White\w\n${Yellow}hist:\# ${Red}jobs:\j $Blue\$ ${xcolors[off]}"

#(138)[lesell_b] ~ $> lsl (avec l'heure dans le coin haut-droite) /* BBBUUUUUGGGG */
