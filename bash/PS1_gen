#! /bin/bash

# Usage:
#   ./PS1_gen            => will generate the PS1 and export it

# function to adapt colors for the PS1:
function ps1-col () {
    # $1 : a color. ex: 'Red'
    # to get the corresponding color: xcolors['Red'] => '\e[0;31m'
    echo "\["${xcolors[$1]}"\]"
}

